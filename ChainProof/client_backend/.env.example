# =============================================================================
# ChainProof Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# Server Configuration
PORT=4000
NODE_ENV=development

# =============================================================================
# Pinata IPFS Configuration
# Get your keys from: https://app.pinata.cloud/keys
# =============================================================================
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_JWT=your_pinata_jwt_here

# =============================================================================
# Sepolia Blockchain Configuration
# Using public RPC - no API key needed
# =============================================================================
SEPOLIA_RPC_URL=https://rpc.sepolia.org
# Contract address - deploy ChainProofAnchor.sol via Remix and paste address here
ANCHOR_CONTRACT_ADDRESS=
# Private key of the wallet that will submit anchoring transactions
# WARNING: Never commit this! Use a dedicated testnet wallet only
DEPLOYER_PRIVATE_KEY=

# =============================================================================
# Hyperledger Fabric Configuration
# These work with Microfab on port 7070
# =============================================================================
FABRIC_PEER_URL=grpc://localhost:7070
FABRIC_ORDERER_URL=grpc://localhost:7070
FABRIC_CA_URL=http://localhost:7070
FABRIC_CHANNEL=chainproof-channel
FABRIC_CHAINCODE=chainproof

# MSP Configuration - change based on which org the backend acts as
# Options: WhistleblowersOrgMSP, VerifierOrgMSP, LegalOrgMSP
FABRIC_MSP_ID=WhistleblowersOrgMSP

# Path to connection profile (generated from Microfab)
FABRIC_CONNECTION_PROFILE_PATH=./config/connection-profile.json

# =============================================================================
# Frontend URL (for CORS)
# =============================================================================
FRONTEND_URL=http://localhost:7000
